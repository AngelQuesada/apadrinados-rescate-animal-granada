{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "DEBUG Backend",
            "runtimeExecutable": "nodemon",
            "runtimeArgs": [
                "-r",
                "dotenv/config"
            ],
            "cwd": "${workspaceFolder}/backend",
            "program": "${workspaceFolder}/backend/app.js",
            "restart": true,
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "NODE_ENV": "development",
                "DOTENV_CONFIG_PATH": ".env.development"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Seed Script",
            "runtimeExecutable": "nodemon",
            "program": "${workspaceFolder}/backend/db/seed.js",
            "restart": true,
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Run Frontend",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "cwd": "${workspaceFolder}/frontend",
            "console": "integratedTerminal"
        },
        {
            "name": "Run Backend",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "-r",
                "dotenv/config"
            ],
            "cwd": "${workspaceFolder}/backend",
            "runtimeExecutable": "nodemon",
            "program": "${workspaceFolder}/backend/app.js",
            "restart": true,
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development",
                "DOTENV_CONFIG_PATH": ".env.development"
            }
        }
    ],
    "compounds": [
        {
            "name": "Start DEV",
            "configurations": [
                "Run Frontend",
                "Run Backend"
            ],
            "stopAll": true
        }
    ]
}