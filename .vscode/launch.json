{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "DEBUG Backend",
            "runtimeExecutable": "nodemon",
            "program": "${workspaceFolder}/backend/app.js",
            "restart": true,
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Seed Script",
            "runtimeExecutable": "nodemon",
            "program": "${workspaceFolder}/backend/db/seed.js",
            "restart": true,
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Run Frontend",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "cwd": "${workspaceFolder}/frontend",
            "console": "integratedTerminal"
        },
        {
            "name": "Run Backend",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "nodemon",
            "program": "${workspaceFolder}/backend/app.js",
            "restart": true,
            "console": "integratedTerminal"
        }
    ],
    "compounds": [
        {
            "name": "Start DEV",
            "configurations": [
                "Run Frontend",
                "Run Backend"
            ],
            "stopAll": true
        }
    ]
}