{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Frontend (dev)",
      "type": "shell",
      "command": "pnpm run dev",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Run Backend (dev)",
      "type": "shell",
      "command": "pnpm run start:dev",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Run All (dev)",
      "dependsOn": [
        "Run Frontend (dev)",
        "Run Backend (dev)"
      ],
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
